@page
@model MyApp.Pages.Entries.IndexModel
@{
	ViewData["Title"] = "Entries -";
}

<h1>Entries</h1>
<br />

@if(Model.role != null){
	


<a class="btn btn-primary btn-sm" href="/Entries/Create">New Entry</a>
<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Cost</th>
			<th>Created At</th>
			<th>Action</th>
		</tr>

	</thead>
	<tbody>
		@foreach(var item in Model.listClients)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>@item.cost</td>
				<td>@item.created_at</td>
				<td>
					<a class="btn btn-primary btn-sm" href="/Clients/Edit?id=@item.Id">Edit</a>
					<a class="btn btn-primary btn-sm" href="/Clients/Delete?id=@item.Id">Delete</a>

				</td>
			</tr>

		}

	</tbody>


	</table>

}
else
{
	<p>Login to view your Entries</p>

}